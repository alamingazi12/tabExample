<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TabApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/alexbold</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MyOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">#ffffff</item>
    </style>
    <style name="Theme.CustomStyle" parent="TextAppearance.Design.Tab">
        <!-- Primary brand color. -->
       <item name="fontFamily">@font/alexbold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:textFontWeight">900</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="transactions__month_tabs_text_appearance" parent="Widget.AppCompat.ActionBar.TabText">
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.TabApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TabApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TabApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>